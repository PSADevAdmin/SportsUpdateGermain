<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:background="@color/appThemeBlue"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pureWhite"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/homeTeamImageButton"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="2"
                app:srcCompat="@android:drawable/screen_background_dark" />

            <TextView
                android:id="@+id/versusTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Vs"
                android:textSize="18dp"/>

            <ImageButton
                android:id="@+id/awayTeamImageButton"
                android:layout_width="0dp"
                android:layout_height="96dp"
                android:layout_weight="2"
                app:srcCompat="@android:drawable/screen_background_dark" />
        </LinearLayout>

        <Button
            android:id="@+id/numberOfPlayersPicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:text="Number of players per team"
            android:background="@color/lightGrey"
            android:stateListAnimator="@null"/>

        <EditText
            android:id="@+id/cityNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:layout_weight="0"
            android:inputType="text"
            android:hint="City"
            android:background="@color/backgroundWhite" />

        <EditText
            android:id="@+id/groundNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:layout_weight="0"
            android:inputType="text"
            android:hint="Ground"
            android:background="@color/backgroundWhite"/>

        <Button
            android:id="@+id/halfTimePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="24dp"
            android:padding="8dp"
            android:text="Minutes per half"
            android:background="@color/lightGrey"
            android:stateListAnimator="@null"/>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:gravity="center"
        android:text="Start MATCH"
        android:textSize="18dp"
        android:background="@color/backgroundWhite"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>